#define MIRYOKU_CUSTOM_COMBOS_TERM 50
#define MIRYOKU_CUSTOM_COMBOS_MACRO(LAYER, POSITION1, POSITION2, BINDING) \
customcombo_##LAYER##_##POSITION1##_##POSITION2 { \
  layers = <LAYER>; \
  key-positions = <POSITION1 POSITION2>; \
  bindings = <BINDING>; \
  timeout-ms = <MIRYOKU_CUSTOM_COMBOS_TERM>; \
};

/ {
  combos {
    compatible = "zmk,combos";
    MIRYOKU_CUSTOM_COMBOS_MACRO(U_BASE, 7, 8, &kp BSPC)
  };
};