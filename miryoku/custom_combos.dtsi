#define MIRYOKU_CUSTOM_COMBOS_TERM 50
#define MIRYOKU_CUSTOM_COMBOS_MACRO(LAYER, POSITION, BINDING) \
customcombo_ ## LAYER ## _ ## POSITION { \
  layers = <LAYER>; \
  key-positions = <POSITION>; \
  bindings = <BINDING>; \
  timeout-ms = <MIRYOKU_CUSTOM_COMBOS_TERM>; \
};

/ {
  combos {
    compatible = "zmk,combos";
    MIRYOKU_CUSTOM_COMBOS_MACRO(U_BASE, 7 8, &kp BSPC)
  };
};
